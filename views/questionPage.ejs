<%- include('partials/head.ejs')%>

  <body>
    <%- include('partials/navbar.ejs')%>
      <section class="container">
        <h1 class="mt-5">
          <%= question.questionTitle %>
        </h1>
        <p class="mt-3">
          <%= question.question %>
        </p>
        <form class="mt-5" method="POST" action="/postanswer">
          <h4>Sabe a resposta? Responda abaixo!</h4>
          <textarea class="form-control mt-3" name="answerBody" id="answerBody" cols="30" rows="5" placeholder="Digite sua resposta aqui..."></textarea>
          <input type="hidden" value="<%= question.id %>" name="questionId" />
          <button class="btn btn-success mt-3" type="submit">Enviar resposta</button>
        </form>
        <div class="mt-5">
          <h3>Respostas</h3>
          <% if(answer.length) { %>
            <% answer.forEach((item)=> { %>
              <div class="card mb-3 mt-3 ">
                <div class="card-body ">
                  <p class="d-flex justify-content-between align-items-center">
                    <%= item.answerBody %>
                      <span class='font-monospace fw-bold ms-5'>
                        <%= item.createdAt.getDate() %>/<%= item.createdAt.getMonth()+1 %>/<%= item.createdAt.getFullYear() %>
                      </span>
                  </p>
                </div>
              </div>

              <% }) %>
                <% } else {%>
                  <h5 class="mt-3">Nenhuma resposta cadastrada. Seja o primeiro!</h5>
                  <% } %>
        </div>
      </section>

  </body>
  <%- include('partials/script.ejs')%>